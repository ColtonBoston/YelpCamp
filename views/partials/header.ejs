<!DOCTYPE HTML>
<html>
<head>
<title>YelpCamp</title>
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

  <nav class="navbar navbar-default navbar-expand">
  		<div class="navbar-header">
  			<a href="/" class="navbar-brand">YelpCamp</a>
  		</div>
      </button>
  		<div class="" id="navbarToggle">
  			<ul class="nav navbar-nav navbar-right mr-auto mt-2 mt-lg-0">
          <% if(!currentUser){ %>
  				      <li class="nav-item"><a href="/login">Login</a></li>
  				      <li class="nav-item"><a href="/register">Sign Up</a></li>
          <% } else { %>
                <li class="nav-item"><a href="#">Signed In As <strong><%= currentUser.username %></strong></a></li>
  				      <li class="nav-item"><a href="/logout">Logout</a></li>
          <% } %>
  			</ul>
  		</div>
  </nav>
  <div class="container">
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
    <% } %>
  </div>
